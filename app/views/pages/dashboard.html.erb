<div class="dashboard">
  <div class="top">
    <h1>Dashboard de <span class="highlight"><%= @user.name %></span></h1>
  </div>
  <div class="incoming">
    <h3>Mes sessions à venir: <span class="highlight"><%= @my_future_participations.count %></span></h3>
  <% @my_future_participations.each do |participation| %>
    <%= render 'shared/participation_card', participation: participation %>
  <% end %>
  </div>
  <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, id: "btn-logout" %>
  <%= render 'shared/navbar' %>
</div>
