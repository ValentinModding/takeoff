<div class= show-session >

  <div class="banner" style="background-image: url(<%= @activity.spot.photo.attached? ? cl_image_path(@activity.spot.photo.key) : image_tag("surfer.jpg") %>)">
    <div class="container">
      <h1>Session</h1>
      <h2><%= @activity.spot.name %></h2>
    <div class="btn-spot">
      <%= link_to "Afficher le spot", spot_path(@activity.spot.id), class: "btn-big" %>
    </div>
    </div>
  </div>


  <div class= "session-details">
    <div class="session-content">
      <div class="session-div">
        <i class="iconify" data-icon="carbon:wave-height"></i>
        <p>Environ <strong><%= @activity.wave_height %>m</strong> de vague</p>
      </div>

      <div class="session-div">
        <i class="iconify" data-icon="carbon:skill-level-basic"></i>
        <p>Niveau: <strong>moyen à confirmé</strong> </p>
      </div>

      <div class="session-div">
        <i class="iconify" data-icon="carbon:wave-period"></i>
        <p>Info marée : surfer entre <strong><%= @activity.date_time_start.strftime('%Hh%M')%> et <%= @activity.date_time_end.strftime('%Hh%M')%></strong></p>
      </div>

      <div class="session-div">
        <i class="iconify" data-icon="akar-icons:info"></i>
        <p><%= @activity.tips %></p>
      </div>

      <div class="session-div">
        <i class="iconify" data-icon="arcticons:night-light"></i>
        <p>Combinaison recommandée : <strong><%= @wetsuit %></strong></p>
      </div>

      <div class= "buddies">
        <span class="iconify surf" data-icon="map:surfing"></span>
          <div class="avatars">
            <% if @participations.count == 0 %>
              <h2>Il n'y a pas encore de participants !</h2>
            <% else %>
              <% @participations.each do |participation| %>
                <%= participation.user.photo.attached? ? cl_image_tag(participation.user.photo.key, height: 40, width: 40, crop: :fill ) : image_tag("surfer.jpg")%>
              <% end %>
            <% end %>
          </div>
      </div>
    </div>

    <div class="btn-join-back">
      <%= link_to 'Back', onclick: "window.history.back();", id: "icone-arrow" do %>
        <h2 class="btn-small" >Back</h2>
      <% end %>
      <%= link_to "join", new_activity_participation_path(@activity), class: "btn-medium" %>
    </div>
  </div>
</div>
